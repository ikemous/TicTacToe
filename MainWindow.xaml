<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:TicTacToe.MVVM.ViewModel"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        Title="MainWindow" Height="450" Width="800">

    <Window.DataContext>
        <viewModel:MainViewModel />
    </Window.DataContext>

    <Border Background="#272537"
            CornerRadius="30"
            >
        <Grid MouseDown="MoveWindow">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="50"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition />
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Border 
                Background="LightGray" 
                Grid.ColumnSpan="3"
                CornerRadius="30 30 0 0" />

            <Button 
                Grid.Column="2" 
                Height="24"
                Width="24"
                Panel.ZIndex="1"
                Background="Yellow"
                Click="MinimizeWindow"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" 
                Margin="93,4,82,2"
                >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="360" />
                    </Style>
                </Button.Resources>
                <Button.Content>
                    -
                </Button.Content>
            </Button>
            <Button 
                Grid.Column="2" 
                Height="25"
                Width="25"
                Panel.ZIndex="1"
                Background="Red"
                Content="X"
                Click="CloseWindow"
                VerticalAlignment="Center"
                HorizontalAlignment="Center" Margin="135,2,40,0"
                >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="360" />
                    </Style>
                </Button.Resources>
            </Button>

            <TextBlock 
                Grid.Column="0" 
                Grid.Row="1"
                Text="Tic-Tac-Toe"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Foreground="White"
                FontSize="28"
                Height="40"
                Margin="5"/>

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="1"
                Margin="80,10,26,10"
                Command="{Binding MainMenuViewCommand}"
                Name="MainMenuButton"
                Click="MainMenuButtonClick"
            >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                Main Menu
            </Button>

            <ContentControl
                Grid.Row="2"
                Grid.ColumnSpan="3"
                Margin="0"
                Content="{Binding CurrentView}"
                />
            <Button
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="1"
                Margin="100,300,100,20" 
                Command="{Binding GameViewCommand}"
                Name="StartButton" Click="StartGame"
               >
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
                Start
            </Button>
        </Grid>
    </Border>
</Window>
